                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card text-bg-light" style="border-radius: 1rem;">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1"><b>Deliveries</b></h4>
                    <div class="flex-shrink-0">
                    <button type="button" class="btn btn-soft-info btn-sm text-white" style="background-color: rgb(21, 21, 131);" data-bs-toggle="modal" data-bs-target="#newDelivery">
                        <i class="ri-file-list-3-line align-middle"></i> <b>New Delivery</b>
                    </button>
                    </div>
                </div>
                <div class="card-body p-4 text-center">
                    <table class="table table-hover table-warning table-striped" id="delivriesTable">
                    <thead class="" >
                        <tr >
                        <th scope="col" style="color:orangered">Delivery ID</th>
                        <th scope="col" style="color:orangered">Product Name</th>
                        <th scope="col" style="color:orangered">Description</th>
                        <th scope="col" style="color:orangered">Location</th>
                        <th scope="col" style="color:orangered">Date Created</th>
                        <th scope="col" style="color:orangered">Personel</th>
                        <th scope="col" style="color:orangered">Date Delivered</th>
                        <th scope="col" style="color:orangered">Status</th>
                        <th scope="col" style="color:orangered">Action</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        {{#each deliveries}}
                        <tr>
                            <td>{{ this.deliveryID }}</td>
                            <td>{{ this.productName }}</td>
                            <td>{{ this.description }}</td>
                            <td>{{ this.location }}</td>
                            <td>{{ this.dateCreated }}</td>
                            <td>{{ this.personel }}</td>
                            <td>{{ this.dateDelivered }}</td>
                            <td>{{ this.status }}</td>
                            <td>
                                <button class="btn text-white" style="background-color: rgb(21, 21, 131);">Edit</button>
                                <button class="btn btn-secondary">Delete</button>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                    </table>
                </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
            </div>
        </div>
        </div>

        <!-- Personel Modal -->
        <div class="modal fade" id="personelModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="personelLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content bg-white text-dark">
            <div class="modal-header text-white" style="background-color: rgb(21, 21, 131);">
                <h1 class="modal-title fs-5" id="personelLabel"><b>Dispatchify</b></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card text-bg-light" style="border-radius: 1rem;">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1"><b>Personels</b></h4>
                    <div class="flex-shrink-0">
                    <button type="button" class="btn btn-soft-info btn-sm text-white" style="background-color: rgb(21, 21, 131);" data-bs-toggle="modal" data-bs-target="#newPersonel">
                        <i class="ri-file-list-3-line align-middle"></i> <b>New Personel</b>
                    </button>
                    </div>
                </div>
                <div class="card-body p-4 text-center">
                    <table class="table table-hover table-light table-striped">
                    <thead class="table-light">
                        <tr>
                        <th scope="col">Personel ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Date Joined</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>                    
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        {{#each personels}}
                        <tr>
                            <td>{{ this.personelID }}</td>
                            <td>{{ this.name }}</td>
                            <td>{{ this.email }}</td>
                            <td>{{ this.phone }}</td>
                            <td>{{ this.dateJoined }}</td>
                            <td>{{ this.status }}</td>
                            <td>
                                <button class="btn btn-primary">Edit</button>
                                <button class="btn btn-primary">Delete</button>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                    </table>
                </div>
                </div>
            </div>
            <div class="modal-footer">
