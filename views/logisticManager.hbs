<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center">
    <div class="container d-flex align-items-center">
      <h1 class="logo me-auto"><a style="color: rgb(57, 57, 184);" href="#">Dispatchify</a></h1>

      <nav id="navbar" class="navbar">
        <ul>
          <li><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#delivery"><b>Deliveries</b></button></li>
          <li class="ms-3"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#personelModal"><b>Personels</b></button></li>
          <li class="ms-3"><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#signinModal"><b>Delivery History</b></button></li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav>
    </div>
  </header>

  <!-- ======= Hero Section ======= -->
  <section id="hero">
    <div class="col-12 text-white p-5">
      <h1>Available Deliveries</h1>
    </div>
  </section>

  <main id="main">
    <!-- Deliveries Modal -->
    <div class="modal fade" id="delivery" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deliveryLabel" aria-hidden="true">
      <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-white text-dark">
          <div class="modal-header text-bg-success">
            <h1 class="modal-title fs-5" id="deliveryLabel"><b>Dispatchify</b></h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card text-bg-light" style="border-radius: 1rem;">
              <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"><b>Deliveries</b></h4>
                <div class="flex-shrink-0">
                  <button type="button" class="btn btn-soft-info btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#newDelivery">
                    <i class="ri-file-list-3-line align-middle"></i> <b>New Delivery</b>
                  </button>
                </div>
              </div>
              <div class="card-body p-4 text-center">
                <table class="table table-hover table-success table-striped" id="delivriesTable">
                  <thead class="table-light">
                    <tr>
                      <th scope="col">Delivery ID</th>
                      <th scope="col">Product Name</th>
                      <th scope="col">Description</th>
                      <th scope="col">Location</th>
                      <th scope="col">Date Created</th>
                      <th scope="col">Personel</th>
                      <th scope="col">Date Delivered</th>
                      <th scope="col">Status</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody class="table-group-divider">
                    {{#each deliveries}}
                    <tr>
                        <td>{{ this.deliveryID }}</td>
                        <td>{{ this.productName }}</td>
                        <td>{{ this.description }}</td>
                        <td>{{ this.location }}</td>
                        <td>{{ this.dateCreated }}</td>
                        <td>{{ this.personel }}</td>
                        <td>{{ this.dateDelivered }}</td>
                        <td>{{ this.status }}</td>
                        <td>
                            <button class="btn btn-primary">Edit</button>
                            <button class="btn btn-primary">Delete</button>
                        </td>
                    </tr>
                    {{/each}}

                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Personel Modal -->
    <div class="modal fade" id="personelModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="personelLabel" aria-hidden="true">
      <div class="modal-dialog modal-fullscreen">
        <div class="modal-content bg-white text-dark">
          <div class="modal-header text-bg-success">
            <h1 class="modal-title fs-5" id="personelLabel"><b>Dispatchify</b></h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="card text-bg-light" style="border-radius: 1rem;">
              <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"><b>Personels</b></h4>
                <div class="flex-shrink-0">
                  <button type="button" class="btn btn-soft-info btn-sm">
                    <i class="ri-file-list-3-line align-middle"></i> <b>Add Personel</b>
                  </button>
                </div>
              </div>
              <div class="card-body p-4 text-center">
                <table class="table table-hover table-success table-striped">
                  <thead class="table-light">
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">First</th>
                      <th scope="col">Last</th>
                      <th scope="col">Handle</th>
                    </tr>
                  </thead>
                  <tbody class="table-group-divider">
                    <!-- Add rows dynamically with JavaScript or server-side rendering -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- New Delivery Modal -->
    <div class="modal fade" id="newDelivery" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="newDeliveryLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bg-white text-dark">
          <div class="modal-header text-bg-success">
            <h1 class="modal-title fs-5" id="newDeliveryLabel"><b>Dispatchify</b></h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col-xl-12">
                <div class="card">
                  <div class="card-header">
                    <h6 class="card-title mb-0"><b>Create New Delivery</b></h6>
                  </div>
                  <div class="card-body">
                    <form id="deliveryForm" action="/new-delivery" method="post">
                      <div class="row">
                        <div class="mb-3 col-6">
                          <input type="text" class="form-control" name="deliveryID" placeholder="Delivery ID" required>
                        </div>
                        <div class="mb-3 col-6">
                          <input type="text" class="form-control" name="productName" placeholder="Product Name" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="mb-3 col-6">
                          <input type="text" class="form-control" name="description" placeholder="Description" required>
                        </div>
                        <div class="mb-3 col-6">
                          <input type="text" class="form-control" name="location" placeholder="Location" required>
                        </div>
                      </div>
                      <div class="row">
                        <div class="mb-3 col-6">
                          <input type="date" class="form-control" name="dateCreated" placeholder="Date Created" required>
                        </div>
                        <div class="mb-3 col-6">
                          <input type="text" class="form-control" name="personel" placeholder="Personel ID" required>
                        </div>
                      </div>
                      <button type="submit" class="btn btn-primary" style="float: right;">Create</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Success Alert -->
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
      New delivery created successfully!
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </main>

