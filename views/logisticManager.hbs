  <main id="main">
        <!-- Deliveries Modal -->
        <div class="modal fade" id="delivery" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deliveryLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content  text-white">
            <div class="modal-header" style="background-color: rgb(21, 21, 131);">
