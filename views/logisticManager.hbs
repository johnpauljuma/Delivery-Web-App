  <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            // Get the modals
            var deliveryModal = new bootstrap.Modal(document.getElementById('delivery'));
            var newDeliveryModal = new bootstrap.Modal(document.getElementById('newDelivery'));
            var deliveryModal = new bootstrap.Modal(document.getElementById('personelModal'));
            var newDeliveryModal = new bootstrap.Modal(document.getElementById('newPersonel'));

            // Event listener for showing the newDelivery modal
            document.getElementById('newDelivery').addEventListener('show.bs.modal', function (event) {
            deliveryModal.hide();
            });

            // Event listener for hiding the newDelivery modal
            document.getElementById('newDelivery').addEventListener('hidden.bs.modal', function (event) {
            deliveryModal.show();
            });

            // Event listener for showing the newPersonel modal
            document.getElementById('newPersonel').addEventListener('show.bs.modal', function (event) {
            deliveryModal.hide();
            });

            // Event listener for hiding the newDelivery modal
            document.getElementById('newPersonel').addEventListener('hidden.bs.modal', function (event) {
            deliveryModal.show();
            });

            // Handle URL success parameter and alert display
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('success')) {
                const successAlert = document.getElementById('success-alert');
                successAlert.style.display = 'block';

                // Show the modal again
                newDeliveryModal.show();

                // Reset form data
                document.getElementById('deliveryForm').reset();

                // Remove the success parameter from the URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        });
  </script>

