                        <div class="row">
                            <div class="mb-3 col-4">
                                <label class="form-label ms-2">Date</label>
                                <input type="date" class="form-control" name="dateJoined" placeholder="Date joined" required>
                            </div>
                            <div class="mb-3 col-4">
                                <label class="form-label ms-2">Password</label>
                                <input type="text" class="form-control" name="password" placeholder="Enter password" required>
                            </div>
                            <div class="mb-3 col-4">
                                <label class="form-label ms-2">Confirm Password</label>
                                <input type="text" class="form-control" name="confirmPassword" placeholder="Renter password" required>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary" style="float: right;">Add</button>
                        </form>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        </div>

        
